<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:background="?android:attr/colorBackground">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:padding="5dip">

        <TextView android:text="@string/help_title_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingBottom="5dip"
                  android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:text="@string/help_import_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingBottom="2dip"/>
        <TextView android:text="@string/help_export_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingBottom="5dip"/>


        <TextView android:text="@string/help_logs_plans_rules_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_logs_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_plans_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_rules_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="5dip"/>

        <TextView android:text="@string/help_plans_detail0_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_plans_detail1_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_plans_merge_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="5dip"/>

        <TextView android:text="@string/help_rules_detail0_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_rules_detail1_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_rules_detail2_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="2dip"/>
        <TextView android:text="@string/help_rules_detail3_"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="5dip"/>


        <Button android:id="@+id/ok" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip" android:layout_marginTop="10dip"
                android:text="@android:string/ok"/>
    </LinearLayout>
</ScrollView>
